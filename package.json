{
  "name": "mango-clean-node-api",
  "version": "1.0.0",
  "description": "API Nodejs com Clean Archtecture e TDD",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Darlley/mango-clean-node-api.git"
  },
  "keywords": [
    "nodejs",
    "jest",
    "tdd",
    "clean-archtecture",
    "mongodb"
  ],
  "author": "Darlley Brito/Rodrigo Manguinho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Darlley/mango-clean-node-api/issues"
  },
  "homepage": "https://github.com/Darlley/mango-clean-node-api#readme",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests --silent",
    "test:ci": "npm test -- --coverage --silent",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "coveralls": "^3.0.11",
    "husky": "^4.0.0-beta.5",
    "jest": "^29.7.0",
    "lint-staged": "^9.4.3",
    "standard": "^14.3.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "fast-glob": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^3.3.5",
    "validator": "^13.12.0"
  },
  "engines": {
    "node": ">=16.20.2"
  }
}
